@model WebApplication2.Models.ExternalLoginListViewModel
@using Microsoft.Owin.Security

@*<h4>Utilice otro servicio para iniciar sesión.</h4>*@

@{
    var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();
    if (loginProviders.Count() == 0)
    {
        <div>
            <p>
                No existen servicios de autenticación externos configurados. Consulte <a href="https://go.microsoft.com/fwlink/?LinkId=403804">este artículo</a>
                para obtener información sobre cómo configurar esta aplicación ASP.NET para admitir el inicio de sesión a través de servicios externos.
            </p>
        </div>
    }
    else
    {
        using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            <div class="col-md-14 text-center">
                <img src="https://dermacentergt.com/wp-content/uploads/2020/03/logo-dermacenter-1-768x184.png" alt="Imagen de inicio de sesión" class="img-fluid" />
            </div>

            @Html.AntiForgeryToken()

            <div id="socialLoginList">
                <p>
                    @foreach (AuthenticationDescription p in loginProviders)
                    {
                        <style>
                            /* Establece el cuerpo y el div contenedor al 100% de ancho y alto */
                            .btn-hola {
                                border: none; /* Eliminar el borde */
                                background: none; /* Eliminar el fondo */
                                padding: 0; /* Eliminar el relleno */
                                cursor: pointer; /* Cambiar el cursor a un puntero al pasar por encima */
                            }

                                /* Estilos para el texto del botón y la imagen */
                                .btn-hola span {
                                    display: none; /* Ocultar el texto "Inicia sesión con tu cuenta de Google." */
                                }

                            .img-in-button {
                                vertical-align: middle;
                                width: 24px; /* Ajustar el tamaño de la imagen según tus necesidades */
                                height: 24px;
                            }

                            .separador {
                                margin-top: 15px;
                            }
                            .btn-google {
                                display: inline-flex;
                                align-items: center;
                                justify-content: center;
                                background-color: #B66B78; /* Color de fondo de Google */
                                color: #ffffff; /* Color de texto en blanco */
                                border: none;
                                border-radius: 4px;
                                padding: 10px 20px;
                                cursor: pointer;
                                font-weight: bold;
                                transition: background-color 0.3s;
                            }

                                .btn-google:hover {
                                    background-color: #357AE8; /* Cambia el color de fondo al pasar el cursor por encima */
                                }

                                .btn-google img {
                                    margin-right: 10px; /* Margen derecho para separar la imagen del texto */
                                    width: 24px; /* Ajusta el tamaño de la imagen según tus necesidades */
                                    height: 24px;
                                    display: inline-block;
                                    vertical-align: middle;
                                }
                        </style>
                        <button type="button" class="btn-hola" onclick="llamarBotonGoogle()">
                            
                            <h6>Inicia sesión con tu cuenta de Google.</h6>
                            <img src="~/imagenes/2613276_company_google_hardware and software_internet_search_icon.png" alt="Logo de Google" class="btn-google">
                        </button>


                        <button type="submit" style="display: none;" class="fa fa-google" id="boton-google" name="provider" value="@p.AuthenticationType" title="O Ingresá Con @p.Caption">@p.AuthenticationType</button>

                    }
                </p>
            </div>
        }
        <script>
            function llamarBotonGoogle() {
                document.getElementById("boton-google").click();
            }
        </script>
    }
}
